<h1 class="text-center">React 框架選擇建議</h1>
    <form action="/suggestions/add" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="feature" class="form-label">特性名稱</label>
        <input type="text" class="form-control" id="feature" name="feature" required>
      </div>
      <div class="mb-3">
        <label for="reason" class="form-label">理由</label>
        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">提交建議</button>
    </form>

    <h2 class="mt-5">已提交的建議</h2>
    <ul class="list-group">
      <% suggestions.forEach((item, index) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= item.feature %></strong>: <%= item.reason %>
          </div>
        
          <div class="d-flex">
            <!-- 編輯按鈕 -->
            <a href="/suggestions/edit/<%= index %>" class="btn btn-warning btn-sm mr-1">編輯</a>
            
            <!-- 刪除按鈕 -->
            <form action="/suggestions/delete" method="POST" class="d-inline">
              <input type="hidden" name="index" value="<%= index %>">
              <button type="submit" class="btn btn-danger btn-sm">刪除</button>
            </form>
          </div>
        </li>
        
      <% }) %>
    </ul>